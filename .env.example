# Strava OAuth Configuration
# Get these values from https://www.strava.com/settings/api

# Your Strava Application's Client ID (public)
STRAVA_CLIENT_ID=your_client_id_here

# Your Strava Application's Client Secret (keep this secret!)
STRAVA_CLIENT_SECRET=your_client_secret_here

# IMPORTANT: Configure your Strava API Application Settings
# 1. Go to https://www.strava.com/settings/api
# 2. Set "Authorization Callback Domain" to one of:
#    - For production: kompass-dev.streamlit.app
#    - For local development: localhost
# 3. IMPORTANT: The domain should NOT include protocol (http/https) or trailing slash
#
# The full redirect URIs used by this app are:
# - Production: https://kompass-dev.streamlit.app/
# - Local development: http://localhost:8501/

# Optional: Environment Detection (uncomment for local development)
# STREAMLIT_ENV=development

# Optional: Override default redirect URIs (advanced users only)
# STRAVA_REDIRECT_URI_LOCAL=http://localhost:8501/
# STRAVA_REDIRECT_URI_PROD=https://kompass-dev.streamlit.app/

# Optional: Legacy environment variables for backward compatibility
# If you have existing access tokens, you can still use them
# STRAVA_ACCESS_TOKEN=your_existing_access_token
# STRAVA_REFRESH_TOKEN=your_existing_refresh_token

# Amazon S3 Storage Configuration (Optional)
# Enable S3 storage for rider data, routes, and future ML models
# When disabled, local storage will be used as fallback

# Set to 'true' to enable S3 storage
S3_STORAGE_ENABLED=false

# AWS S3 Configuration (required if S3_STORAGE_ENABLED=true)
AWS_S3_BUCKET=your-kompass-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Storage Limits (free tier compliance)
S3_MAX_FILE_SIZE_MB=50
S3_MAX_USER_STORAGE_MB=100

# Firebase Storage Configuration (Optional - Recommended for Streamlit Cloud)
# Enable Firebase storage for rider data, routes, and future ML models
# Firebase offers more generous free tier than AWS S3

# Set to 'true' to enable Firebase storage
FIREBASE_STORAGE_ENABLED=false

# Firebase Configuration (required if FIREBASE_STORAGE_ENABLED=true)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# Path to Firebase service account key JSON file
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/serviceAccountKey.json
# Or provide the service account key as JSON string (for Streamlit secrets)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Firebase Storage Limits
FIREBASE_MAX_FILE_SIZE_MB=50
FIREBASE_MAX_USER_STORAGE_MB=100